<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BeVolunteer"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/robinhood"
        android:textColor="@color/darkRed"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rescuer"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animal Care Trust Bangladesh"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="monospace"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volunteer Registration Form"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="15dp"
                android:fontFamily="monospace"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Your Name:"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/ET_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_lite_blue"
                android:hint="Name"
                android:padding="3dp"
                android:textColor="@color/darkRed"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Father's Name:"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/ET_father_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_lite_blue"
                android:hint="Father's Name"
                android:padding="3dp"
                android:textColor="@color/darkRed"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Mother's Name:"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/ET_mother_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_lite_blue"
                android:hint="Mother's Name"
                android:padding="3dp"
                android:textColor="@color/darkRed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Personal Phone number:"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/ET_Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_lite_blue"
                android:hint="Phoen Number"
                android:padding="3dp"
                android:textColor="@color/darkRed"
                android:inputType="phone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="NID or Birth Certificate No.:"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/ET_NID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_lite_blue"
                android:hint="NID or Birth Certificate No. "
                android:padding="3dp"
                android:textColor="@color/darkRed"
                android:inputType="number"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Educational Background:"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/ET_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_lite_blue"
                android:hint="Educational Background"
                android:padding="3dp"
                android:textColor="@color/darkRed"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Why you want to work with RobinHood ?"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/ET_why"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/rect_lite_blue"
                android:hint="Answer the question in detail"
                android:padding="3dp"
                android:textColor="@color/darkRed"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Do you have any pet?(if yes, give us details)"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/ET_pets"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rect_lite_blue"
                android:hint="Answer the question in detail"
                android:padding="3dp"
                android:textColor="@color/darkRed"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="How can you help Robin Hood?"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/ET_how"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/rect_lite_blue"
                android:hint="Answer the question in detail"
                android:padding="3dp"
                android:textColor="@color/darkRed"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Reference :"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/ET_ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_lite_blue"
                android:hint="(Name, Address, Phone no.)"
                android:padding="3dp"
                android:textColor="@color/darkRed"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TV_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="I am agree with the terms and condition"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic"/>

                <CheckBox
                    android:id="@+id/CB_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:background="@drawable/pressed_dark_blue"
                android:textColor="@color/white"
                android:layout_gravity="center"/>


        </LinearLayout>



    </ScrollView>


</LinearLayout>