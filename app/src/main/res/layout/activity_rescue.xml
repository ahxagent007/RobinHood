<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Rescue"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/robinhood"
        android:textColor="@color/darkRed"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rescuer"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_addRescue"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/pressed_add"
            android:layout_margin="20dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_rescueList"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/pressed_rescue_list"
            android:layout_margin="20dp"
            android:layout_weight="1"/>



    </LinearLayout>


</LinearLayout>